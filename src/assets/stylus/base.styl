.input-item
  margin: 0 10px; 
  .form-group
    display: flex;
    height: 2.5em;
    line-height: 2.5em;
    margin: 15px 0;
    .control-label
      flex: 0 100px;
      text-align: center;
    .control-input
      flex: 1;
      outline: none;
      border-bottom: 1px solid #D8D8D8;
      text-indent: 8px;
      padding: 0 8px;

.btn
  width: 100%;
  outline: none;
.btn-login
  background-color: #EE7968;
  color: #ffffff;
  height: 3em;
  font-size: 16px;
  margin: 10px 0;
  &.disabled
    background-color: rgba(238, 121, 104, 0.53);